// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model plants {
  id              String    @id @default(uuid())
  common_name     String
  scientific_name String    @unique
  synonyms        String[]
  description     String?
  taxonomy        taxonomy  @relation(fields: [taxonomyId], references: [id])
  min_h           Int?
  max_h           Int?
  min_ph          Float?
  max_ph          Float?
  min_temp        Int?
  max_temp        Int?
  water           Level     @default(M)
  habit           Habit?
  wikipedia       String?
  britannica      String?
  img             String?
  imgs            String[]
  pests           pests[]
  blights         blights[]
  taxonomyId      String    @unique
}

model pests {
  id              String       @id @default(uuid())
  common_name     String
  synonyms        String[]
  scientific_name String       @unique
  description     String?
  wikipedia       String?
  britannica      String?
  img             String?
  imgs            String[]
  taxonomy        taxonomy     @relation(fields: [taxonomyId], references: [id])
  taxonomyId      String       @unique
  plants          plants[]
  pestisides      pestisides[]
}

model blights {
  id              String       @id @default(uuid())
  common_name     String
  synonyms        String[]
  scientific_name String       @unique
  description     String?
  wikipedia       String?
  britannica      String?
  img             String?
  imgs            String[]
  taxonomy        taxonomy     @relation(fields: [taxonomyId], references: [id])
  taxonomyId      String       @unique
  plants          plants[]
  pestisides      pestisides[]
}

model pestisides {
  id              String    @id @default(uuid())
  common_name     String?
  synonyms        String[]
  scientific_name String?   @unique
  description     String?
  wikipedia       String?
  britannica      String?
  img             String?
  pests           pests[]
  blights         blights[]
}

model taxonomy {
  id      String   @id @default(uuid())
  kingdom String?
  phylum  String?
  class   String?
  order   String?
  family  String?
  genus   String?
  species String?
  plant   plants?
  pest    pests?
  Blights blights?
}

enum Level {
  H
  M
  L
}

enum Habit {
  Forb_herb
  Graminoid
  Lichenous
  Nonvascular
  Shrub
  Subshrub
  Tree
  Vine
}
