// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plants {
  id              String   @id @default(uuid())
  common_name     String
  scientific_name String   @unique
  synonym         String[]
  description     String?
  min_h           Int?
  max_h           Int?
  min_ph          Float?
  max_ph          Float?
  min_temp        Int?
  max_temp        Int?
  water           Level    @default(M)
  habit           Habit
  wikipedia       String?
  britannica      String?
  img             String?
  imgs            String[]
  pests           Pests[]
}

model Pests {
  id     String   @id @default(uuid())
  plants Plants[]
}

enum Level {
  H
  M
  L
}

enum Habit {
  Forb_herb
  Graminoid
  Lichenous
  Nonvascular
  Shrub
  Subshrub
  Tree
  Vine
}
