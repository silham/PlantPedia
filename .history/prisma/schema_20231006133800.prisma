// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plants {
  id              String    @id @default(uuid())
  common_name     String
  scientific_name String    @unique
  synonyms        String[]
  description     String?
  taxonomy        Taxonomy  @relation(fields: [taxonomyId], references: [id])
  min_h           Int?
  max_h           Int?
  min_ph          Float?
  max_ph          Float?
  min_temp        Int?
  max_temp        Int?
  water           Level?    @default(M)
  habit           Habit?
  wikipedia       String?
  britannica      String?
  img             String?
  imgs            String[]
  pests           Pests[]
  blights         Blights[]
  taxonomyId      String    @unique
  search          Search?
}

model Pests {
  id              String       @id @default(uuid())
  common_name     String
  synonyms        String[]
  scientific_name String       @unique
  description     String?
  wikipedia       String?
  britannica      String?
  img             String?
  imgs            String[]
  taxonomy        Taxonomy     @relation(fields: [taxonomyId], references: [id])
  taxonomyId      String       @unique
  plants          Plants[]
  pestisides      Pestisides[]
  search          Search?
}

model Blights {
  id              String       @id @default(uuid())
  common_name     String
  synonyms        String[]
  scientific_name String       @unique
  description     String?
  wikipedia       String?
  britannica      String?
  img             String?
  imgs            String[]
  taxonomy        Taxonomy     @relation(fields: [taxonomyId], references: [id])
  taxonomyId      String       @unique
  plants          Plants[]
  pestisides      Pestisides[]
  search          Search?
}

model Pestisides {
  id              String    @id @default(uuid())
  common_name     String?
  synonyms        String[]
  scientific_name String?   @unique
  description     String?
  wikipedia       String?
  britannica      String?
  img             String?
  pests           Pests[]
  blights         Blights[]
  search          Search?
}

model Taxonomy {
  id      String   @id @default(uuid())
  kingdom String?
  phylum  String?
  class   String?
  order   String?
  family  String?
  genus   String?
  species String?
  plant   Plants?
  pest    Pests?
  blight  Blights?
}

model Search {
  id              String      @id @default(uuid())
  common_name     String?
  scientific_name String?     @unique
  decription      String?
  img             String?
  type            Type?
  plant           Plants?     @relation(fields: [plantsId], references: [id])
  pest            Pests?      @relation(fields: [pestsId], references: [id])
  blight          Blights?    @relation(fields: [blightsId], references: [id])
  pestiside       Pestisides? @relation(fields: [pestisidesId], references: [id])
  plantsId        String?     @unique
  pestsId         String?     @unique
  blightsId       String?     @unique
  pestisidesId    String?
}

enum Level {
  H
  M
  L
}

enum Habit {
  Forb_herb
  Graminoid
  Lichenous
  Nonvascular
  Shrub
  Subshrub
  Tree
  Vine
}

enum Type {
  PLANTS
  PESTS
  BLIGHTS
}
